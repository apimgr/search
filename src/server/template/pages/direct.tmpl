{{define "content"}}
<div class="direct-answer-page" data-type="{{.Answer.Type}}" data-term="{{.Answer.Term}}">
    {{/* Header with answer type badge and title */}}
    <header class="direct-header">
        <div class="direct-type-badge">{{.Answer.Type}}</div>
        <h1 class="direct-title">{{.Answer.Title}}</h1>
        {{if .Answer.Description}}
        <p class="direct-description">{{.Answer.Description}}</p>
        {{end}}
    </header>

    {{/* Main content area */}}
    <div class="direct-content{{if .Answer.Error}} has-error{{end}}">
        {{if .Answer.Error}}
        <div class="direct-error">
            <span class="error-icon">!</span>
            <span class="error-message">{{.Answer.Error}}</span>
        </div>
        {{end}}
        {{/* Content is pre-formatted HTML from handlers */}}
        {{.Answer.Content | safeHTML}}
    </div>

    {{/* Source attribution */}}
    {{if or .Answer.Source .Answer.SourceURL}}
    <footer class="direct-source">
        <span class="source-label">Source:</span>
        {{if .Answer.SourceURL}}
        <a href="{{.Answer.SourceURL}}" class="source-link" target="_blank" rel="noopener noreferrer">
            {{if .Answer.Source}}{{.Answer.Source}}{{else}}{{.Answer.SourceURL}}{{end}}
        </a>
        {{else}}
        <span class="source-text">{{.Answer.Source}}</span>
        {{end}}
    </footer>
    {{end}}

    {{/* Navigation back to search */}}
    <nav class="direct-nav">
        <a href="/search?q={{urlquery .Query}}" class="back-to-search">
            <span class="back-icon">&larr;</span> Back to search
        </a>
        {{/* Quick reference to other direct answer types */}}
        <div class="direct-types-hint">
            Try:
            <code>tldr:git</code>,
            <code>dns:example.com</code>,
            <code>wiki:Python</code>,
            <code>http:404</code>
        </div>
    </nav>
</div>

<style>
/* Direct Answer Page Styles - HTML5/CSS only, no JavaScript required */
.direct-answer-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 20px;
}

.direct-header {
    border-bottom: 1px solid var(--border-color, #2a2a2a);
    padding-bottom: 15px;
    margin-bottom: 20px;
}

.direct-type-badge {
    display: inline-block;
    background: var(--accent-color, #4a9eff);
    color: #000;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 10px;
}

.direct-title {
    font-size: 1.5rem;
    color: var(--text-primary, #e0e0e0);
    margin: 10px 0;
    line-height: 1.3;
}

.direct-description {
    font-size: 0.9rem;
    color: var(--text-secondary, #888);
    margin: 5px 0 0;
}

.direct-content {
    background: var(--surface-color, #1a1a1a);
    border: 1px solid var(--border-color, #2a2a2a);
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
    overflow-x: auto;
}

.direct-content.has-error {
    background: rgba(255, 0, 0, 0.05);
    border-color: rgba(255, 0, 0, 0.2);
}

.direct-error {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 15px;
    background: rgba(255, 100, 100, 0.1);
    border-radius: 4px;
    margin-bottom: 15px;
}

.direct-error .error-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background: #ff6b6b;
    color: #fff;
    border-radius: 50%;
    font-weight: bold;
    font-size: 0.875rem;
}

.direct-error .error-message {
    color: #ff6b6b;
}

/* Content formatting - common patterns from handlers */
.direct-content pre {
    background: var(--code-bg, #1e1e1e);
    padding: 15px;
    border-radius: 4px;
    overflow-x: auto;
    font-family: "SF Mono", "Monaco", "Inconsolata", "Fira Code", monospace;
    font-size: 0.875rem;
    line-height: 1.5;
}

.direct-content code {
    font-family: "SF Mono", "Monaco", "Inconsolata", "Fira Code", monospace;
    font-size: 0.875rem;
    background: var(--code-bg, #1e1e1e);
    padding: 2px 6px;
    border-radius: 3px;
}

.direct-content h2 {
    color: var(--accent-color, #4a9eff);
    margin: 20px 0 10px;
    font-size: 1.1rem;
    border-bottom: 1px solid var(--border-color, #2a2a2a);
    padding-bottom: 5px;
}

.direct-content h3 {
    color: var(--text-primary, #e0e0e0);
    margin: 15px 0 8px;
    font-size: 1rem;
}

.direct-content p {
    margin: 10px 0;
    line-height: 1.6;
}

.direct-content ul,
.direct-content ol {
    margin: 10px 0;
    padding-left: 25px;
}

.direct-content li {
    margin: 5px 0;
}

.direct-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 15px 0;
}

.direct-content th,
.direct-content td {
    border: 1px solid var(--border-color, #2a2a2a);
    padding: 8px 12px;
    text-align: left;
}

.direct-content th {
    background: var(--code-bg, #1e1e1e);
    font-weight: 600;
}

.direct-content tr:hover {
    background: rgba(255, 255, 255, 0.02);
}

/* DNS/Network specific styles */
.direct-content .record-type {
    color: var(--accent-color, #4a9eff);
    font-weight: 600;
}

.direct-content .security-warning {
    color: #ffa500;
}

.direct-content .security-ok {
    color: #4caf50;
}

/* Source footer */
.direct-source {
    font-size: 0.875rem;
    color: var(--text-secondary, #888);
    padding: 15px 0;
    border-top: 1px solid var(--border-color, #2a2a2a);
}

.source-label {
    margin-right: 5px;
}

.source-link {
    color: var(--accent-color, #4a9eff);
    text-decoration: none;
}

.source-link:hover {
    text-decoration: underline;
}

/* Navigation */
.direct-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 15px;
    margin-top: 20px;
    padding-top: 15px;
    border-top: 1px solid var(--border-color, #2a2a2a);
}

.back-to-search {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    color: var(--accent-color, #4a9eff);
    text-decoration: none;
    font-size: 0.9rem;
}

.back-to-search:hover {
    text-decoration: underline;
}

.direct-types-hint {
    font-size: 0.75rem;
    color: var(--text-secondary, #888);
}

.direct-types-hint code {
    background: var(--code-bg, #1e1e1e);
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 0.7rem;
}

/* Responsive */
@media (max-width: 600px) {
    .direct-answer-page {
        padding: 15px;
    }

    .direct-content {
        padding: 15px;
    }

    .direct-nav {
        flex-direction: column;
        align-items: flex-start;
    }

    .direct-content table {
        font-size: 0.875rem;
    }

    .direct-content th,
    .direct-content td {
        padding: 6px 8px;
    }
}
</style>
{{end}}
