{{define "content"}}
<div class="user-page security-page">
    <div class="page-header">
        <h1>{{t "user.security.title"}}</h1>
        <p class="page-subtitle">Manage your security settings</p>
    </div>

    <div class="user-container">
        <nav class="user-nav">
            <a href="/users/profile" class="nav-item">{{t "user.profile"}}</a>
            <a href="/users/security" class="nav-item active">{{t "user.security"}}</a>
            <a href="/users/tokens" class="nav-item">{{t "user.tokens"}}</a>
        </nav>

        <div class="user-content">
            {{if .Flash}}
            <div class="alert alert-{{.Flash.Type}}" role="alert">
                {{.Flash.Message}}
            </div>
            {{end}}

            <div class="security-section">
                <h2>{{t "user.security.change_password"}}</h2>
                <form method="POST" action="/users/security/password" class="security-form">
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

                    <div class="form-group">
                        <label for="current_password">{{t "user.security.current_password"}}</label>
                        <input type="password" id="current_password" name="current_password"
                               autocomplete="current-password" required>
                    </div>

                    <div class="form-group">
                        <label for="new_password">{{t "user.security.new_password"}}</label>
                        <input type="password" id="new_password" name="new_password"
                               autocomplete="new-password" required minlength="8">
                        <div class="password-strength" id="password-strength"></div>
                    </div>

                    <div class="form-group">
                        <label for="confirm_password">{{t "user.security.confirm_password"}}</label>
                        <input type="password" id="confirm_password" name="confirm_password"
                               autocomplete="new-password" required>
                    </div>

                    <button type="submit" class="btn btn-primary">{{t "form.save"}}</button>
                </form>
            </div>

            <div class="security-section">
                <h2>{{t "user.security.2fa"}}</h2>
                <div class="twofa-status">
                    {{if .TwoFactorEnabled}}
                    <div class="status-badge status-enabled">
                        <span class="status-icon">&#x2713;</span>
                        {{t "user.security.2fa.enabled"}}
                    </div>
                    <p class="status-text">Your account is protected with two-factor authentication.</p>
                    <button type="button" class="btn btn-danger" id="disable-2fa-btn">
                        {{t "user.security.2fa.disable"}}
                    </button>
                    {{else}}
                    <div class="status-badge status-disabled">
                        <span class="status-icon">&#x2717;</span>
                        {{t "user.security.2fa.disabled"}}
                    </div>
                    <p class="status-text">Add an extra layer of security to your account.</p>
                    <a href="/users/security/2fa/setup" class="btn btn-primary">
                        {{t "user.security.2fa.enable"}}
                    </a>
                    {{end}}
                </div>
            </div>

            {{if .TwoFactorEnabled}}
            <div class="security-section">
                <h2>{{t "user.security.recovery_keys"}}</h2>
                <p class="section-description">
                    Recovery keys can be used to access your account if you lose your 2FA device.
                    You have <strong>{{.RecoveryKeysRemaining}}</strong> recovery keys remaining.
                </p>
                {{if le .RecoveryKeysRemaining 2}}
                <div class="alert alert-warning">
                    You have few recovery keys remaining. Consider regenerating them.
                </div>
                {{end}}
                <a href="/users/security/recovery-keys" class="btn btn-secondary">
                    View Recovery Keys
                </a>
            </div>
            {{end}}

            <div class="security-section">
                <h2>{{t "user.security.sessions"}}</h2>
                <p class="section-description">
                    These are the devices currently logged into your account.
                </p>

                <div class="sessions-list">
                    {{range .Sessions}}
                    <div class="session-item {{if .IsCurrent}}session-current{{end}}">
                        <div class="session-info">
                            <div class="session-device">
                                <span class="device-icon">&#x1F4BB;</span>
                                <span class="device-name">{{.DeviceName}}</span>
                                {{if .IsCurrent}}
                                <span class="badge badge-primary">{{t "user.security.sessions.current"}}</span>
                                {{end}}
                            </div>
                            <div class="session-meta">
                                <span class="session-ip">{{.IPAddress}}</span>
                                <span class="session-time">Last active: {{.LastUsed | formatTime}}</span>
                            </div>
                        </div>
                        {{if not .IsCurrent}}
                        <form method="POST" action="/users/security/sessions/revoke" class="session-action">
                            <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
                            <input type="hidden" name="session_id" value="{{.ID}}">
                            <button type="submit" class="btn btn-danger btn-sm">
                                {{t "user.security.sessions.revoke"}}
                            </button>
                        </form>
                        {{end}}
                    </div>
                    {{end}}
                </div>

                {{if gt (len .Sessions) 1}}
                <form method="POST" action="/users/security/sessions/revoke-all" class="revoke-all-form">
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <button type="submit" class="btn btn-danger">
                        {{t "user.security.sessions.revoke_all"}}
                    </button>
                </form>
                {{end}}
            </div>
        </div>
    </div>
</div>
{{/* Per AI.md PART 16: NO inline CSS/JS - all styles in main.css, scripts in app.js */}}
{{end}}
