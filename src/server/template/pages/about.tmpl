{{define "content"}}
<div class="static-page about-page">
    <header class="about-header">
        <h1>{{.Config.Server.Branding.Title}}</h1>
        <p class="tagline">{{.Config.Server.Description}}</p>
        <div class="version-info">
            <span class="version-badge">{{version}}</span>
        </div>
    </header>

    {{if .Config.Server.Pages.About.Content}}
    <div class="page-content markdown">
        {{.Config.Server.Pages.About.Content | safe}}
    </div>
    {{else}}
    <div class="page-content">
        {{/* Features section */}}
        <section class="about-section">
            <h2>Features</h2>
            <div class="feature-grid">
                <div class="feature-card">
                    <span class="feature-icon">üîí</span>
                    <h3>Privacy First</h3>
                    <p>No tracking, no profiling, no filter bubbles. Your searches stay private.</p>
                </div>
                <div class="feature-card">
                    <span class="feature-icon">üåê</span>
                    <h3>Multiple Sources</h3>
                    <p>Aggregates results from DuckDuckGo, Brave, Wikipedia, and more.</p>
                </div>
                <div class="feature-card">
                    <span class="feature-icon">‚ö°</span>
                    <h3>Instant Answers</h3>
                    <p>Get quick answers for calculations, conversions, definitions, and more.</p>
                </div>
                <div class="feature-card">
                    <span class="feature-icon">üí®</span>
                    <h3>Bang Commands</h3>
                    <p>Use <code>!g</code>, <code>!w</code>, <code>!yt</code> to search specific sites directly.</p>
                </div>
                <div class="feature-card">
                    <span class="feature-icon">üéØ</span>
                    <h3>Direct Answers</h3>
                    <p>49+ operators for IP lookup, DNS, WHOIS, encoding, and developer tools.</p>
                </div>
                <div class="feature-card">
                    <span class="feature-icon">üßÖ</span>
                    <h3>Tor Support</h3>
                    <p>Access via Tor hidden service for maximum anonymity.</p>
                </div>
                <div class="feature-card">
                    <span class="feature-icon">üì±</span>
                    <h3>Responsive Design</h3>
                    <p>Works on any device - desktop, tablet, or mobile.</p>
                </div>
                <div class="feature-card">
                    <span class="feature-icon">üö´</span>
                    <h3>No JavaScript Required</h3>
                    <p>Core functionality works without JavaScript enabled.</p>
                </div>
            </div>
        </section>

        {{/* Tor section - shown only if enabled */}}
        {{if .Config.Server.Tor.Enabled}}
        <section class="about-section tor-section">
            <h2>Tor Hidden Service</h2>
            <p>This search engine is available via Tor for enhanced privacy and anonymity.</p>
            {{if .TorAddress}}
            <div class="onion-address-box">
                <code id="onion-addr">{{.TorAddress}}</code>
                <button class="btn-copy" data-copy-target="onion-addr" aria-label="Copy address">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                    </svg>
                    Copy
                </button>
            </div>
            <p class="tor-note">Requires <a href="https://www.torproject.org/download/" target="_blank" rel="noopener">Tor Browser</a> or a Tor-enabled browser.</p>
            {{else}}
            <p class="tor-note">Tor address will be available once the hidden service connects to the Tor network.</p>
            {{end}}
        </section>
        {{end}}

        {{/* API Documentation */}}
        <section class="about-section">
            <h2>API & Documentation</h2>
            <p>This application provides REST and GraphQL APIs with interactive documentation.</p>
            <div class="api-links">
                <a href="/openapi" class="api-link">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                    </svg>
                    OpenAPI / Swagger
                </a>
                <a href="/graphql" class="api-link">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                    </svg>
                    GraphQL
                </a>
                <a href="/server/help" class="api-link">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                    Help & Usage Guide
                </a>
            </div>
        </section>

        {{/* Open Source */}}
        <section class="about-section">
            <h2>Open Source</h2>
            <p>This search engine is free and open source software. You can host your own instance and maintain complete control over your search experience.</p>
            {{if .Config.Server.Branding.SourceCodeURL}}
            <div class="source-links">
                <a href="{{.Config.Server.Branding.SourceCodeURL}}" target="_blank" rel="noopener" class="source-link">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                    </svg>
                    View Source Code
                </a>
            </div>
            {{end}}
        </section>

        {{/* Version & Build Info */}}
        <section class="about-section version-section">
            <h2>Version Information</h2>
            <dl class="version-grid">
                <dt>Version</dt>
                <dd><code>{{version}}</code></dd>
                <dt>Build Date</dt>
                <dd><time>{{.BuildDate}}</time></dd>
            </dl>
        </section>
    </div>
    {{end}}
</div>
{{end}}
