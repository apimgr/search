{{define "content"}}
<div class="auth-page forgot-page">
    <div class="auth-container">
        <div class="auth-header">
            <h1>{{t "auth.forgot.title"}}</h1>
            <p class="auth-subtitle">Enter your email to receive a password reset link</p>
        </div>

        {{if .Error}}
        <div class="alert alert-error" role="alert">
            {{.Error}}
        </div>
        {{end}}

        {{if .Success}}
        <div class="alert alert-success" role="alert">
            {{t "auth.forgot.sent"}}
        </div>
        <div class="auth-footer">
            <a href="/auth/login" class="btn btn-secondary btn-block">{{t "auth.forgot.back"}}</a>
        </div>
        {{else}}
        <form method="POST" action="/auth/forgot" class="auth-form" id="forgot-form">
            <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

            <div class="form-group">
                <label for="email">{{t "auth.forgot.email"}}</label>
                <input type="email" id="email" name="email" value="{{.Email}}"
                       autocomplete="email" required autofocus
                       placeholder="you@example.com">
            </div>

            <button type="submit" class="btn btn-primary btn-block">
                {{t "auth.forgot.submit"}}
            </button>
        </form>

        <div class="auth-footer">
            <a href="/auth/login">{{t "auth.forgot.back"}}</a>
        </div>
        {{end}}
    </div>
</div>
{{/* Per AI.md PART 16: NO inline CSS/JS - all styles in main.css */}}
{{end}}
