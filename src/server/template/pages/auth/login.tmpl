{{define "content"}}
<div class="auth-page login-page">
    <div class="auth-container">
        <div class="auth-header">
            <h1>{{t "auth.login"}}</h1>
            <p class="auth-subtitle">{{t "auth.login.title"}}</p>
        </div>

        {{if .Error}}
        <div class="alert alert-error" role="alert">
            {{.Error}}
        </div>
        {{end}}

        <form method="POST" action="/auth/login" class="auth-form" id="login-form">
            <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
            {{if .Redirect}}
            <input type="hidden" name="redirect" value="{{.Redirect}}">
            {{end}}

            <div class="form-group">
                <label for="username">{{t "auth.login.username"}}</label>
                <input type="text" id="username" name="username" value="{{.Username}}"
                       autocomplete="username" required autofocus
                       aria-describedby="username-help">
                <small id="username-help" class="form-help">{{t "auth.login.username"}}</small>
            </div>

            <div class="form-group">
                <label for="password">{{t "auth.login.password"}}</label>
                <div class="password-input-wrapper">
                    <input type="password" id="password" name="password"
                           autocomplete="current-password" required
                           aria-describedby="password-help">
                    <button type="button" class="password-toggle" aria-label="Toggle password visibility">
                        <span class="icon-eye"></span>
                    </button>
                </div>
            </div>

            <div class="form-group form-group-inline">
                <label class="checkbox-label">
                    <input type="checkbox" name="remember" id="remember">
                    <span>{{t "auth.login.remember"}}</span>
                </label>
                <a href="/auth/forgot" class="forgot-link">{{t "auth.login.forgot"}}</a>
            </div>

            <button type="submit" class="btn btn-primary btn-block">
                {{t "auth.login.submit"}}
            </button>
        </form>

        {{if .RegistrationEnabled}}
        <div class="auth-footer">
            <p>{{t "auth.login.no_account"}} <a href="/auth/register">{{t "auth.register"}}</a></p>
        </div>
        {{end}}

        {{if or .OIDCEnabled .LDAPEnabled}}
        <div class="auth-divider">
            <span>or</span>
        </div>

        <div class="auth-social">
            {{if .OIDCEnabled}}
            <a href="/auth/oidc" class="btn btn-secondary btn-block">
                <span class="icon-key"></span>
                Sign in with SSO
            </a>
            {{end}}
        </div>
        {{end}}
    </div>
</div>
{{/* Per AI.md PART 16: NO inline CSS/JS - all styles in main.css, JS in app.js */}}
{{end}}
