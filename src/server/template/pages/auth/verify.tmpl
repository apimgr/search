{{define "content"}}
<div class="auth-page verify-page">
    <div class="auth-container">
        <div class="auth-header">
            <h1>{{t "auth.verify.title"}}</h1>
        </div>

        {{if .Error}}
        <div class="alert alert-error" role="alert">
            {{t "auth.verify.invalid"}}
        </div>
        <div class="verify-actions">
            <a href="/auth/login" class="btn btn-primary btn-block">{{t "auth.login"}}</a>
            {{if .CanResend}}
            <form method="POST" action="/auth/verify/resend" class="resend-form">
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                <input type="hidden" name="email" value="{{.Email}}">
                <button type="submit" class="btn btn-secondary btn-block">
                    {{t "auth.verify.resend"}}
                </button>
            </form>
            {{end}}
        </div>
        {{else if .Success}}
        <div class="alert alert-success" role="alert">
            <div class="success-icon">&#x2713;</div>
            {{t "auth.verify.success"}}
        </div>
        <div class="verify-actions">
            <a href="/auth/login" class="btn btn-primary btn-block">{{t "auth.login"}}</a>
        </div>
        {{else}}
        <div class="verifying">
            <div class="spinner"></div>
            <p>Verifying your email...</p>
        </div>
        {{end}}
    </div>
</div>
{{/* Per AI.md PART 16: NO inline CSS/JS - all styles in main.css */}}
{{end}}
