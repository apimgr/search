{{/* Announcements partial - displays active announcements from config */}}
{{/* Per AI.md PART 17: No inline JS handlers - use event delegation */}}
{{ define "announcements" }}
{{ if .Announcements }}
<div class="announcements-container" id="announcements">
    {{ range .Announcements }}
    <div class="announcement announcement-{{ .Type }}" data-announcement-id="{{ .ID }}" {{ if .Dismissible }}data-dismissible="true"{{ end }}>
        <div class="announcement-content">
            {{ if .Title }}<strong class="announcement-title">{{ .Title }}</strong>{{ end }}
            <span class="announcement-message">{{ .Message }}</span>
        </div>
        {{ if .Dismissible }}
        <button class="announcement-dismiss" data-announcement-id="{{ .ID }}" aria-label="Dismiss">&times;</button>
        {{ end }}
    </div>
    {{ end }}
</div>
{{/* Per AI.md PART 16: NO inline JS - initialization in app.js */}}
{{ end }}
{{ end }}
