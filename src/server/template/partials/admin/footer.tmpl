{{define "admin/footer"}}
{{/* Admin Panel Footer - per AI.md PART 17 */}}
{{/* Per AI.md PART 17: Admin path is configurable (default: "admin") */}}
<footer class="admin-footer">
    <div class="admin-footer-content">
        {{/* Version info */}}
        <span class="admin-footer-version">
            <a href="/{{.AdminPath}}/server/info">search {{version}}</a>
        </span>

        <span class="admin-footer-separator">•</span>

        {{/* Documentation link */}}
        {{if .Config.Server.Branding.SourceCodeURL}}
        <span class="admin-footer-docs">
            <a href="{{.Config.Server.Branding.SourceCodeURL}}" target="_blank" rel="noopener">Docs</a>
        </span>
        {{end}}

        <span class="admin-footer-separator">•</span>

        {{/* Server status indicator */}}
        <span class="admin-footer-status">
            {{if .ServerStatus}}
                {{if .ServerStatus.Healthy}}
                <span class="status-indicator status-ok" title="All systems operational">●</span>
                <span>Healthy</span>
                {{else if .ServerStatus.Degraded}}
                <span class="status-indicator status-warning" title="Some issues detected">●</span>
                <span>Degraded</span>
                {{else}}
                <span class="status-indicator status-error" title="System issues">●</span>
                <span>Issues</span>
                {{end}}
            {{else}}
            <span class="status-indicator status-ok" title="All systems operational">●</span>
            <span>Healthy</span>
            {{end}}
        </span>
    </div>
</footer>
{{end}}
