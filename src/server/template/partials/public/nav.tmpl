{{define "nav"}}
<nav class="nav" id="nav-menu">
    {{/* Desktop: inline links | Mobile: hamburger only */}}
    <div class="nav-links">
        <a href="/" class="nav-link{{if eq .Page "home"}} active{{end}}">Home</a>
        {{/* Search header form for non-home pages */}}
        {{if ne .Page "home"}}
        <form action="/search" method="GET" class="nav-search-form">
            <input type="hidden" name="category" value="{{default "general" .Category}}">
            <input type="text" name="q" value="{{.Query}}" placeholder="Search..." class="nav-search-input">
            <button type="submit" class="nav-search-btn" aria-label="Search">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
            </button>
        </form>
        {{end}}
        <button class="theme-toggle" aria-label="Toggle theme">
            <svg class="theme-icon-dark" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="5"></circle>
                <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"></path>
            </svg>
            <svg class="theme-icon-light" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
        </button>
    </div>

    {{/* Mobile: hamburger menu toggle (far right of nav row) */}}
    <button class="nav-toggle" aria-label="Toggle navigation" aria-expanded="false" aria-controls="nav-panel">
        <span></span>
        <span></span>
        <span></span>
    </button>
</nav>

{{/* Slide-in panel for mobile (hidden by default) */}}
<div class="nav-panel" id="nav-panel">
    <a href="/" class="nav-panel-link{{if eq .Page "home"}} active{{end}}">Home</a>
    <button class="theme-toggle nav-panel-theme" aria-label="Toggle theme">
        <span class="theme-icon-dark">‚òÄÔ∏è Light Mode</span>
        <span class="theme-icon-light">üåô Dark Mode</span>
    </button>
</div>

{{/* Overlay for mobile menu (click to close) */}}
<div class="nav-overlay" id="nav-overlay"></div>
{{end}}
