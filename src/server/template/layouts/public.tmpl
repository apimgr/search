{{define "public"}}
<!DOCTYPE html>
<html lang="en" class="theme-{{default "dark" .Theme}}">
<head>
    {{template "head" .}}
    {{block "extra_head" .}}{{end}}
</head>
<body class="public-page {{.Page}}-page">
    {{/* Skip link for keyboard navigation - WCAG 2.1 AA */}}
    <a href="#main-content" class="skip-link">Skip to main content</a>

    {{/* Public header */}}
    {{template "public/header" .}}

    {{/* Public navigation */}}
    {{template "public/nav" .}}

    <main id="main-content" class="main-content" role="main">
        {{/* Announcements banners */}}
        {{template "announcements" .}}

        {{/* Flash messages */}}
        {{if .Flash}}
        <div class="flash flash-{{.Flash.Type}}" role="alert">
            {{.Flash.Message}}
            <button class="flash-close" aria-label="Close">&times;</button>
        </div>
        {{end}}

        {{/* Main content area */}}
        {{block "content" .}}{{end}}
    </main>

    {{/* Public footer */}}
    {{template "public/footer" .}}

    {{template "scripts" .}}
    {{block "extra_scripts" .}}{{end}}

    {{/* Cookie consent popup */}}
    {{template "cookie_consent" .}}
</body>
</html>
{{end}}
