{{define "content"}}
<div class="static-page healthz-page">
    <h1>System Health</h1>

    <div class="health-status {{if eq .Health.Status "healthy"}}healthy{{else}}unhealthy{{end}}">
        <div class="status-indicator">
            {{if eq .Health.Status "healthy"}}
            <span class="status-icon">✓</span>
            <span class="status-text">Healthy</span>
            {{else}}
            <span class="status-icon">✗</span>
            <span class="status-text">Unhealthy</span>
            {{end}}
        </div>
    </div>

    <div class="health-info">
        <table class="health-table">
            <tbody>
                <tr>
                    <th>Version</th>
                    <td>{{version}}</td>
                </tr>
                <tr>
                    <th>Uptime</th>
                    <td>{{.Health.Uptime}}</td>
                </tr>
                <tr>
                    <th>Mode</th>
                    <td>{{.Health.Mode}}</td>
                </tr>
                <tr>
                    <th>Timestamp</th>
                    <td>{{.Health.Timestamp}}</td>
                </tr>
            </tbody>
        </table>
    </div>

    {{if .Health.Checks}}
    <div class="health-checks">
        <h2>Service Checks</h2>
        <table class="checks-table">
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {{range $service, $status := .Health.Checks}}
                <tr>
                    <td>{{$service}}</td>
                    <td class="check-status {{$status}}">{{$status}}</td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
    {{end}}

    {{if .Config.IsDevelopment}}
    <div class="health-debug">
        <h2>Debug Information</h2>
        <table class="debug-table">
            <tbody>
                {{if .Health.System}}
                <tr>
                    <th>Go Version</th>
                    <td>{{.Health.System.GoVersion}}</td>
                </tr>
                <tr>
                    <th>CPUs</th>
                    <td>{{.Health.System.NumCPU}}</td>
                </tr>
                <tr>
                    <th>Goroutines</th>
                    <td>{{.Health.System.NumGoroutine}}</td>
                </tr>
                <tr>
                    <th>Memory</th>
                    <td>{{.Health.System.MemAlloc}}</td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
    {{end}}
</div>
{{end}}
