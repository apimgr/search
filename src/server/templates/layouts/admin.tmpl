{{define "admin"}}
<!DOCTYPE html>
<html lang="en" data-theme="{{default "dark" .Theme}}">
<head>
    {{template "head" .}}
    {{block "extra_head" .}}{{end}}
</head>
<body class="admin-page {{.Page}}-page">
    {{/* Admin-specific header */}}
    {{template "admin/header" .}}

    <div class="admin-container">
        {{/* Admin sidebar navigation */}}
        {{template "admin/sidebar" .}}

        <main class="admin-main">
            {{/* Flash messages */}}
            {{if .Flash}}
            <div class="flash flash-{{.Flash.Type}}" role="alert">
                {{.Flash.Message}}
                <button class="flash-close" onclick="this.parentElement.remove()" aria-label="Close">&times;</button>
            </div>
            {{end}}

            {{/* Main content area */}}
            {{block "content" .}}{{end}}
        </main>
    </div>

    {{/* Admin footer */}}
    {{template "admin/footer" .}}

    {{template "scripts" .}}
    {{block "extra_scripts" .}}{{end}}
</body>
</html>
{{end}}
