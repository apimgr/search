{{define "head"}}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="{{if .Description}}{{.Description}}{{else}}{{.Config.Server.Description}}{{end}}">
<meta name="robots" content="noindex, nofollow">
<meta name="referrer" content="no-referrer">

{{/* OpenGraph */}}
<meta property="og:title" content="{{if .Title}}{{.Title}} - {{end}}{{.Config.Server.Title}}">
<meta property="og:description" content="{{if .Description}}{{.Description}}{{else}}{{.Config.Server.Description}}{{end}}">
<meta property="og:type" content="website">

{{/* Twitter Card */}}
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="{{if .Title}}{{.Title}} - {{end}}{{.Config.Server.Title}}">
<meta name="twitter:description" content="{{if .Description}}{{.Description}}{{else}}{{.Config.Server.Description}}{{end}}">

<title>{{if .Title}}{{.Title}} - {{end}}{{.Config.Server.Title}}</title>

{{if .Config.Server.Branding.FaviconURL}}
<link rel="icon" href="{{.Config.Server.Branding.FaviconURL}}">
{{else}}
<link rel="icon" href="/static/img/favicon.svg" type="image/svg+xml">
{{end}}

{{/* OpenSearch - enables "Add to browser" functionality */}}
<link rel="search" type="application/opensearchdescription+xml" title="{{.Config.Server.Title}}" href="/opensearch.xml">

<link rel="stylesheet" href="/static/css/main.css">
<script src="/static/js/bangs.js" defer></script>
<script src="/static/js/widgets.js" defer></script>
{{end}}
